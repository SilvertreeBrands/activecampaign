<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="ActiveCampaign\Logger\Handlers\DebugHandler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="ActiveCampaign\Logger\Handlers\ExceptionHandler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="ActiveCampaign\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">ActiveCampaign</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">ActiveCampaign\Logger\Handlers\DebugHandler</item>
                <item name="system" xsi:type="object">ActiveCampaign\Logger\Handlers\ExceptionHandler</item>
            </argument>
        </arguments>
    </type>
</config>
