<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="ac_sync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to schedule a sync for the selected customers to ActiveCampaign?</message>
                        <title translate="true">Sync</title>
                    </confirm>
                    <url path="activecampaign/customer/massSync"/>
                    <type>sync</type>
                    <label translate="true">Schedule Sync to ActiveCampaign</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="customer_columns">
        <column name="ac_sync_contact_status" component="Magento_Ui/js/grid/columns/select" sortOrder="200">
            <settings>
                <options class="ActiveCampaign\Integration\Model\Source\SyncStatus"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">ActiveCampaign Contact Sync Status</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="ac_sync_contact_ac_entity_id" sortOrder="201">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">ActiveCampaign Contact ID</label>
            </settings>
        </column>
        <column name="ac_sync_ecom_customer_status" component="Magento_Ui/js/grid/columns/select" sortOrder="202">
            <settings>
                <options class="ActiveCampaign\Integration\Model\Source\SyncStatus"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">ActiveCampaign Ecom Customer Sync Status</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="ac_sync_ecom_customer_ac_entity_id" sortOrder="203">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">ActiveCampaign Ecom Customer ID</label>
            </settings>
        </column>
    </columns>
</listing>
