<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="ac_sync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to schedule a sync for the selected orders to ActiveCampaign?</message>
                        <title translate="true">Sync</title>
                    </confirm>
                    <url path="activecampaign/order/massSync"/>
                    <type>sync</type>
                    <label translate="true">Schedule Sync to ActiveCampaign</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="ac_sync_status" component="Magento_Ui/js/grid/columns/select" sortOrder="10">
            <settings>
                <options class="ActiveCampaign\Integration\Model\Source\SyncStatus"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <label translate="true">ActiveCampaign Sync Status</label>
                <visible>true</visible>
            </settings>
        </column>
    </columns>
</listing>
