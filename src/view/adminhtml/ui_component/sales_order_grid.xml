<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="order_sync">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_sync</item>
                        <item name="label" xsi:type="string" translate="true">Sync to ActiveCampaign</item>
                        <item name="url" xsi:type="url" path="ac_order/order/masssync"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Sync Order(s)</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to sync the selected orders?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="ac_sync_status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="ActiveCampaign\Integration\Model\Source\SyncStatus"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <label translate="true">ActiveCampaign Sync Status</label>
            </settings>
        </column>
    </columns>
</listing>
